# Copy this file to terraform.tfvars and customize with your values
# Minimal configuration required - most values have sensible defaults

# Required: GCP Project Configuration
project_id = "your-gcp-project-id"  # Your GCP project ID (used for all resources by default)

# Optional: Override defaults if needed
# agent_name = "data-science"  # Base name for resource naming (default: "data-science")
# region     = "us-central1"   # GCP region (default: "us-central1")

# Optional: Use different projects for BigQuery (advanced use case only)
# bq_data_project_id    = "different-project-for-data"
# bq_compute_project_id = "different-project-for-compute"


# Optional: Data Configuration
train_csv_path = "data_science/utils/data/train.csv"
test_csv_path  = "data_science/utils/data/test.csv"

# Optional: RAG Configuration
rag_data_sources = [
  "gs://cloud-samples-data/adk-samples/data-science/bqml"
]


# Optional: Infrastructure Configuration
create_code_interpreter = true
create_staging_bucket   = true